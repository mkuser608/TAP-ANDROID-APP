<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.StudentResume">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <Button
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/button_bg"
            android:clickable="true"
            android:text="@string/download"
            android:textColor="#1A237E"
            app:backgroundTint="@null"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <View
            android:id="@+id/headingView"
            android:layout_width="match_parent"
            android:layout_height="90dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <ImageView
            android:id="@+id/bitLogoImageView"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/headingView"
            app:layout_constraintStart_toStartOf="@+id/headingView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/bit_logo" />

        <ImageView
            android:id="@+id/studentPhoto"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginRight="12dp"
            app:layout_constraintBottom_toBottomOf="@id/headingView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/studenti" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:padding="1dp"
            android:text="BIT SINDRI"
            android:textColor="@color/blue"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/studentPhoto"
            app:layout_constraintStart_toEndOf="@+id/bitLogoImageView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="DHANBAD, JHARKHAND"
            android:textColor="@color/voilet_lite"
            app:layout_constraintEnd_toStartOf="@+id/studentPhoto"
            app:layout_constraintStart_toEndOf="@+id/bitLogoImageView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Higher Technical and Skill Development, Govt. of Jharkhand "
            android:textSize="9sp"
            app:layout_constraintEnd_toStartOf="@+id/studentPhoto"
            app:layout_constraintStart_toEndOf="@+id/bitLogoImageView"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#53001C"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headingView" />

        <View
            android:id="@+id/subHeadingView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headingView" />

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:padding="1dp"
            android:layout_marginTop="2dp"
            android:text="MUKESH KUMAR MANDAL"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/subHeadingView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headingView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Roll No.:"
            android:textSize="12sp"
app:layout_constraintHorizontal_bias="0.2"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/subHeadingView"
            app:layout_constraintStart_toEndOf="@+id/dateOfBirthResume"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/resumeRollNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1905119"
            android:padding="1dp"
            android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:padding="1dp"
            android:text="D.O.B :"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/subHeadingView"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/dateOfBirthResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18-01-2001"
            android:textSize="12sp"
            android:padding="1dp"
            app:layout_constraintEnd_toEndOf="@+id/subHeadingView"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintHorizontal_bias="0.03"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="14sp"
            android:text="B.TECH (Hons.) :"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"

            app:layout_constraintStart_toStartOf="@+id/studentName"
            app:layout_constraintTop_toBottomOf="@+id/studentName" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="1dp"
            android:text="CIVIL ENGINEERING"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/studentName" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#53001C"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subHeadingView"
             />

        <View
            android:id="@+id/objectiveAndEducation"
            android:layout_width="match_parent"
            android:layout_height="120dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subHeadingView" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:padding="1dp"
            android:text="Education :"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/objectiveAndEducation"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/objectiveAndEducation"
            app:layout_constraintTop_toBottomOf="@+id/subHeadingView" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="B.Tech, "
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/subHeadingView" />

        <TextView
            android:id="@+id/branch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="CIVIL ENGINEERING"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/subHeadingView" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=", B.I.T SINDRI"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toEndOf="@+id/branch1"
            app:layout_constraintTop_toBottomOf="@+id/subHeadingView" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="1dp"
            app:layout_constraintEnd_toEndOf="@+id/textView14"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/batchresume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-2023"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/cgpapercentageresume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CGPA"
            app:layout_constraintHorizontal_bias="0.03"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/balck_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/batchresume"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/btechcgparesult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.4"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cgpapercentageresume"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/dotted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@id/cgpapercentageresume" />

        <TextView
            android:id="@+id/diploma12th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="12th / Diploma ,"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="@+id/objectiveAndEducation"
            app:layout_constraintHorizontal_bias="0"

            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/batchresume" />

        <TextView
            android:id="@+id/schoolName12th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="+2 Hogh School"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toEndOf="@+id/diploma12th"
            app:layout_constraintTop_toBottomOf="@+id/cgpapercentageresume" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/diploma12th"
            app:layout_constraintTop_toBottomOf="@+id/diploma12th"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/diploma12thsession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-2023"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintEnd_toEndOf="@+id/objectiveAndEducation"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/schoolName12th" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="2dp"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toEndOf="@+id/diploma12thsession"
            app:layout_constraintTop_toBottomOf="@+id/schoolName12th"
            app:srcCompat="@drawable/balck_circle" />

        <TextView
            android:id="@+id/diploma12thresulttype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Percentage"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/schoolName12th" />

        <TextView
            android:id="@+id/diploma12thresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintHorizontal_bias="0.03"
            android:text="89"
            app:layout_constraintEnd_toEndOf="@+id/objectiveAndEducation"
            app:layout_constraintStart_toEndOf="@+id/diploma12thresulttype"
            app:layout_constraintTop_toTopOf="@+id/diploma12thresulttype" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/dotted"
            app:layout_constraintEnd_toEndOf="@+id/objectiveAndEducation"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@id/diploma12thsession" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>